<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.arsh.omniknightapp.view.fragments.WeatherListFragment"
    >

  <view
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      class="android.support.v7.widget.RecyclerView"
      android:visibility="gone"
      android:id="@+id/weatherList" />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_wb_sunny_48px"
      android:id="@+id/imageViewNoCountry"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      />
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_wb_cloudy_48px"
      android:id="@+id/cloudImageView"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:paddingLeft="60dp"
      android:paddingTop="60dp"
      />
  <TextView
      android:text="@string/please_select_a_country"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageViewNoCountry"
      android:id="@+id/noCountryTextView"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:textColor="@android:color/holo_blue_light"
      android:gravity="center"
      />

</RelativeLayout>
